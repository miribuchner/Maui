<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppZufall.MainPage">

    <Grid Margin="10" RowSpacing ="5 " RowDefinitions="Auto, Auto, Auto">
        <Label Text="Klicken sie auf den Button um eine Zufallszahl zu erstellen"></Label>
        <Label Grid.Row="1" Text="{Binding Title}" />
        <Button Grid.Row="2" Text="Zahlen generieren" />
        <Label Text="{Binding Title}" Grid.Row="3" />
    </Grid>
</ContentPage>
